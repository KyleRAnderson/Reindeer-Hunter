<Window x:Class="Reindeer_Hunter.FFA.AskStudentNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reindeer_Hunter.FFA"
        mc:Ignorable="d" Foreground="White" Background="Black" ResizeMode="CanResize" Width="400" Height="200" Icon="/Reindeer Hunter;component/Resources/Reindeer.ico">
    <Viewbox Stretch="Uniform">
        <Grid Width="589" Height="209">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="CancelButton" Content="Cancel" Margin="0,10,10,10" Grid.Row="1" Grid.Column="1" FontSize="36" Background="Red" Foreground="White"/>
            <Button x:Name="SubmitButton" Content="Submit" Margin="10,10,0,10" Grid.Row="1" FontSize="36" Background="White" Foreground="Black" CommandParameter="{Binding SelectedIndex, ElementName=SelectionBox}"/>
            <ComboBox x:Name="SelectionBox" Margin="10" Grid.ColumnSpan="2" FontSize="36"/>
        </Grid>
    </Viewbox>
</Window>
